<div id="post_show_content" class="skinny_wrapper wrapper_padding">
	<header>
		<p class="date"><%= @post.created_at.strftime("%A %B %d") %></p>
		<h1><%= @post.title %></h1>
		<hr>
	</header>

	<div class="content">
		<%= markdown @post.content %>
	</div>

	<hr>

	<div id="share_box">
		<p>Share To DO List</p>
		<!--Twitter -->
		<a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @spatiuminfinit â€’ &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter" aria-hidden="true"></i></a>
		<!--VK-->
		<a onclick="javascript:window.open('http://vk.com/share.php?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-vk" aria-hidden="true"></i></a>
		<!--Facebook-->
		<a onclick="javascript:window.open('http://facebook.com/sharer.php?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-facebook" aria-hidden="true"></i></a>
	</div>

	<hr>

	<%= render "disqus" %>

</div>

<%= link_to "Edit", edit_post_path(@post) %>
